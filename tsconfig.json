{
  "compilerOptions": {
    "diagnostics": false,
    "allowJs": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "config/*": ["config/*"],
      "config": ["config/"],
      "utils/*": ["utils/*"],
      "utils": ["utils/"],
      "models/*": ["models/*"],
      "models": ["models/"]
    }
  }
}